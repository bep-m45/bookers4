<main>
<div class="container">

 <div class = "row">
     <div class="col-xs-3">
     <% if user_signed_in? %>
      <%= render 'follow_form', user: @user %>
      <% end %>
     <%= render 'users/list', user: @user, book: @book %>
     </div>
  <div class="col-xs-9">
   <div class="book">
    <h2>Followed</h2>
      <table class="table">
       <thead>
       <tr>
        <th></th>
        <th>Name</th>
        <th>Introduction</th>
      </tr>
      </thead>
      <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><li><%= link_to attachment_image_tag(user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg"), user_path(@user.id) %></li>
            <li>followed</li>
            <li><%=link_to user.following.count, following_user_path(user) %></li>
            <li> followers</li>
            <li><%=link_to user.followers.count, followers_user_path(user) %></li>
        </td>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= user.introduction %></td>
      </tr>
      
      
    <% end %>
    </tbody>
     </table>
     <ol>


     
     </ol>
   </div>
   </div>
  </div>
 </div>
 </div>



</main>