
 <main>
  <% flash.each do |message_type, message| %>
  <%= message %>
  <% end %>


<div class="container">

 <div class = "row">
     <div class="col-xs-3">
     <%= render 'users/list', user: @user, book: @book %>
     </div>
  <div class="col-xs-9">
   <div class="book">
    
    <h2>Books</h2>
      <table class="table">
       <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>opinion</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to attachment_image_tag(@user, :profile_image, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg"), user_path(@user.id) %> </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
        
      </tr>
    </tbody>
     </table>
     <ol>
      <li>
       <i class="fa fa-comment"></i>
       <a href="#comments"><%= @book.book_comments.count %></a>
      </li>
     </ol>
     <% end %>
   </div>
   </div>
  </div>
 </div>
</main>
